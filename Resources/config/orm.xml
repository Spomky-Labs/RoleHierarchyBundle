<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="spomky_role_hierarchy.role_manager.default" class="Spomky\RoleHierarchyBundle\Entity\RoleManager">
            <argument type="service" id="spomky_role_hierarchy.entity_manager" />
            <argument>%spomky_role_hierarchy.model.role.class%</argument>
        </service>

        <service id="spomky_role_hierarchy.entity_manager" factory-service="doctrine" factory-method="getManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%spomky_role_hierarchy.model_manager_name%</argument>
        </service>

        <service id="security.role_hierarchy" class="Spomky\RoleHierarchyBundle\Security\RoleHierarchy" public="false">
            <argument>%security.role_hierarchy.roles%</argument>
            <argument type="service" id="spomky_role_hierarchy.role_manager"/>
        </service>
    </services>

</container>
